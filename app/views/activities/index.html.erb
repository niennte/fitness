<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Activity type</th>
      <th>Activity date</th>
      <th>Duration</th>
      <th>Duration, hrs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_type.titleize %></td>
        <td><%= activity.activity_date %></td>
        <td><%= activity.duration %></td>
        <td><%= "#{activity.duration/60}h #{activity.duration % 60}min" %></td>
        <td><%= link_to 'Show', activity, :class => "btn btn-light" %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity), :class => "btn btn-light" %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path, :class => "btn btn-secondary"  %>

<div id="notice" class="text-center <%= notice.present? ? 'alert alert-success' : ''%>" role="alert"><%= notice %></div>
<section class="py-5 container">

<h1 class="text-center">Activities</h1>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>Activity type</th>
      <th>Activity date</th>
      <th>Duration</th>
      <th class="text-center">
        <%= link_to 'New', new_activity_path, :class => "btn btn-secondary"  %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_type.titleize %></td>
        <td><%= activity.activity_date %></td>
        <td><%= "#{activity.hours}h #{activity.minutes}min" %></td>
        <td>
          <nav class="nav justify-content-center">
            <%= link_to 'Show', activity, :class => "item nav-link btn btn-light" %>
            <%= link_to 'Edit', edit_activity_path(activity), :class => "item nav-link  btn btn-light border-left border-right" %>
            <%= link_to 'Delete', activity, method: :delete, data: { confirm: 'Are you sure?' }, :class => "item nav-link btn btn-light" %>
          </nav>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <nav class="nav justify-content-center">
    <%= link_to 'Summary', summary_path, :class => "nav-item nav-link" %>
  </nav>
</section>
